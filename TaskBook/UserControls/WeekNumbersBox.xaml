<UserControl x:Class="TaskBook.UserControls.WeekNumbersBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskBook.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="DayOfWeekBox_OnInitialized">
    <Grid>
        <Grid.Resources>
            <Style TargetType="CheckBox">
                <Setter Property="Padding" Value="0"></Setter>
                <Setter Property="Margin" Value="0,0,7,0"></Setter>
            </Style>
        </Grid.Resources>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">

            <CheckBox Name="Box1" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnChecked">1</CheckBox>
            <CheckBox Name="Box2" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnChecked">2</CheckBox>
            <CheckBox Name="Box3" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnChecked">3</CheckBox>
            <CheckBox Name="Box4" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnChecked">4</CheckBox>
            <CheckBox Name="Box5" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnChecked">5</CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
