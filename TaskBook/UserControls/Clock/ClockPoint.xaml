<UserControl x:Class="TaskBook.UserControls.Clock.ClockPoint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid RenderTransformOrigin="0.5,6.6666666" Name="Grid"  Height="15" Width="15" HorizontalAlignment="Center"   VerticalAlignment="Top">
        <Grid.RenderTransform>
            <RotateTransform x:Name="Rotate" Angle="0"/>
        </Grid.RenderTransform>
        <Ellipse Name="Back"></Ellipse>
        <Label  Name="Label"   Padding="0" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <Label.RenderTransform>
                <RotateTransform x:Name="LabelRotate" Angle="0"/>
            </Label.RenderTransform>
        </Label>
    </Grid>
</UserControl>
