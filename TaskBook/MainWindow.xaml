<dx:DXWindow x:Class="TaskBook.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             Height="350" Width="525" MinHeight="400" MinWidth="490" Closed="DXWindow_Closed"  Closing="DXWindow_Closing"  Loaded="DXWindow_Initialized" Padding="10" >
    <Window.Resources>
        <Color x:Key="Base">AntiqueWhite</Color>
        <Color x:Key="Normal">GreenYellow</Color>
        <Color x:Key="Important">DarkOrange</Color>
        <Color x:Key="VeryImportant">DarkRed</Color>
        <Color x:Key="BirthDay">CornflowerBlue</Color>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Header="О программе" Click="About_Click"/>
            <MenuItem Header="Настройки" Click="Setting_Click"/>
            <Separator/>
            <MenuItem Header="Выход" Click="MenuItem_OnClick"/>
        </ContextMenu>
    </Window.Resources>
</dx:DXWindow>
